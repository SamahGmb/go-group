<div class="head-summary">
  <div class="wrapper">
    <div class="date">
      <% if @event.start_date == @event.end_date %>
        <p>Le <%= @event.start_date.strftime("%d/%m/%G") %></p>
      <% else %>
        <p>Du <%= @event.start_date.strftime("%d/%m/%G")%> au <%= @event.end_date.strftime("%d/%m/%G")%></p>
      <% end %>
    </div>

    <h1><%= @event.title %></h1>
    
    <span class="organizer">
      <%= cl_image_tag @event.user.photo.key, height: 50, width: 50, crop: :thumb, gravity: :face, class: "avatar-large" %>
      <p>Organisé par <br> <%= @event.user.username %></p>
    </span>
   </div>  
</div>

<div class="wrapper">
  <div class="global">

    <div class="main">
      <%= cl_image_tag @event.photo.key, height: 400, width: 600 %>
      <div class="details">
        <h2>Détails</h2>
        <p><%= @event.details %></p>
      </div>

      <div class="btn-middle">
        <% if user_signed_in? %>
          <%= simple_form_for [ @event, @booking ] do |f| %>
            <%= f.submit "Participer !",  class: "btn-gradient" %>
          <% end %>
        <% else %>
          <%= link_to "Log in ", new_user_session_path, class: "btn-gradient" %>
        <% end %>
      </div>
    </div>

    <div class="side">
      <div class="side-text">
      <span class="side-items">
          <i class="far fa-clock"></i>
          <p>
            <% if @event.start_date == @event.end_date %>
              Le <%= @event.start_date.strftime("%d/%m/%G") %>
            <% else %>
              Du <%= @event.start_date.strftime("%d/%m/%G") %> au <%= @event.end_date.strftime("%d/%m/%G") %>
            <% end %>
          </p>
        </span>
        <span class="side-items">
          <i class="fas fa-map-marker-alt"></i>
          <p><%= @event.location %></p>
        </span>
      </div>
      <div id="map"
        style="width: 100%; height: 600px;"
        data-marker="<%= @marker.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
  <div class="simple-link">
    <%= link_to "< Retour à Go-Group", root_path %>
  </div>
</div>